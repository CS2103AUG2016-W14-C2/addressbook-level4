<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<HBox id="eventCardPane" fx:id="eventCardPane" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <children>
                <VBox alignment="CENTER_LEFT" maxHeight="150.0" minHeight="70.0" prefHeight="70.0" GridPane.columnIndex="0">
                    <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                    </stylesheets>
                    <padding>
                        <Insets left="2.0" />
                    </padding>

                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <children>
                                <HBox>
                                    <Label fx:id="id" styleClass="cell_big_label" />
                                    <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
                                </HBox>
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="cell_small_label" text="From: " />
                                    <Label fx:id="startDate" styleClass="cell_small_label" text="\$startDate" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="cell_small_label" text=" " />
                                    <Label fx:id="startTime" styleClass="cell_small_label" text="\$startTime" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="cell_small_label" text="   To: " />
                                    <Label fx:id="endDate" styleClass="cell_small_label" text="\$endDate" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="cell_small_label" text=" " />
                                    <Label fx:id="endTime" styleClass="cell_small_label" text="\$endTime" />
                           </children>
                        </HBox>
                            </children>
                        </HBox>
                  <HBox>
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="cell_small_label" text="Note: " />
                              <Label fx:id="note" styleClass="cell_small_label" text="\$note" />
                     </children>
                  </HBox>
				 		<Label fx:id="status" styleClass="cell_small_label" text="\$status" />
                    </children>
                </VBox>
            </children>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </children>
</HBox>
