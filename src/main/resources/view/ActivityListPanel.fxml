                          <rowConstraints>
                            <RowConstraints vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
      								<Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="cell_big_label" text="Event">
      									<font>
      										<Font size="18.0" />
      									</font>
      								</Text>
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="cell_big_label" text="From" GridPane.columnIndex="1" />
                              <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="cell_big_label" text="To" GridPane.columnIndex="2" />
                           </children>
                        </GridPane>
								<ListView fx:id="eventListView" />
							</children>
						</VBox>
					</items>
				</SplitPane>
				<VBox style="-fx-background-color: #fafad2;">
					<children>
						<Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="cell_big_label" text="Floating Task">
							<font>
								<Font size="18.0" />
							</font>
						</Text>
						<ListView fx:id="floatingTaskListView" />
					</children>
				</VBox>
